	waitKey(1000);
	imwrite("Step.jpg", img);


	Rect Rec(100, 100, 0, 0);

	rectangle(img, Rec, Scalar(255), 1, 8, 0);

	namedWindow("Hel", WINDOW_AUTOSIZE);
	imshow("step",img);
	waitKey(1000);


	// This copy Roi Image into loaded on position Where rec
	imwrite("Step2",img);
	Mat Roi = img(Rec);
	namedWindow("Step 3", WINDOW_AUTOSIZE);
	imshow("Draw", Roi);
	waitKey(1000);
	//imwrite("spet3", Roi);

	//Rect WhereRec(0, 0, Roi.cols, Roi.row);
